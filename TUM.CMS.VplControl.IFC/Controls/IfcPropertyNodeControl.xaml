<UserControl x:Class="TUM.CMS.VplControl.IFC.Controls.IfcPropertyNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TUM.CMS.VplControl.IFC.Controls"
             xmlns:presentation="http://schemas.Xbim.com/Presentation"
             mc:Ignorable="d" 
             Width="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto" MinHeight="150"/>
        </Grid.RowDefinitions>
        <ComboBox Name="elementsComboBox" DisplayMemberPath="Name" Grid.Row="0"/>
        <ScrollViewer Grid.Row="1">
            <presentation:IfcMetaDataControl Name="ifcMetaDataControl" />
        </ScrollViewer>
    </Grid>
</UserControl>
