<Popup x:Class="TUM.CMS.ExtendedVplControl.Controls.PortSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             MouseLeave="PortSelection_OnMouseLeave">
    <Grid Background="Transparent" Opacity="1">
        <Border CornerRadius="5" BorderBrush="DarkGray" BorderThickness="1" Background="White" Padding="10" Margin="2">
            <ListBox Name="PortList" ItemsSource="{Binding PortTypes}" DisplayMemberPath="Name" BorderThickness="0" SelectionMode="Single"  Margin="2" MinHeight="140" MinWidth="150"/>
        </Border>
    </Grid>
</Popup>
 