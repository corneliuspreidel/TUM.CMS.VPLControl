<UserControl x:Class="TUM.CMS.VplControl.IFC.Controls.TitleTextboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TUM.CMS.VplControl.IFC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Name="Title" VerticalAlignment="Center" x:FieldModifier="public" Grid.Row="0"  Grid.Column="0" FontWeight="Bold" ></Label>
        <TextBlock Name="TextBlock" x:FieldModifier="public" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"></TextBlock>

    </Grid>
</UserControl>
